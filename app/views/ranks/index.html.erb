      <!-- STORE -->
      <div id="store" class="col-md-9">
        <!-- store top filter -->
        <div class="store-filter clearfix">
          <!-- SEARCH BAR -->
          <div>
            <div class="header-search">
              <%= form_with url: search_ranks_path, method: :get %>
                <input class="input" name="keyword" placeholder="Search here">
                <button class="search-btn">Search</button>
              </form>
            </div>
          </div>
          <!-- /SEARCH BAR -->
        </div>
        <!-- /store top filter -->

        <!-- store products -->
        <div class="row">
          <div class="col-md-4" style="text-align: center;">
            楽天市場
          </div>
          <div class="col-md-4" style="text-align: center;">
            Yahoo!ショッピング
          </div>
          <div class="col-md-4" style="text-align: center;">
            Amazon
          </div>
        <% (0..2).each do |rank| %>
          <!-- product -->
          <div class="col-md-4 col-xs-6">
            <a href="<%= @rakuten_ranks[rank]['affiliateUrl'] %>" target="_blank" rel="noopener noreferrer">
              <div class="product">
                <div class="product-img">
                  <%= image_tag @rakuten_ranks[rank].medium_image_urls.first %>
                  <div class="product-label">
                    <span class="new"><%= rank + 1 %>位</span>
                  </div>
                </div>
                <div class="product-body">
                  <p class="product-category"><%= @rakuten_ranks[rank].genre.name %></p>
                  <h3 class="product-name"><%= @rakuten_ranks[rank]['itemName'] %></h3>
                  <h4 class="product-price"><%= number_to_currency(@rakuten_ranks[rank]['itemPrice'], precision: 0, unit: '') %>円</h4>
                  <div class="product-rating">
                    <i class='fa fa-star'></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                  </div>
                </div>
              </div>
            </a>
          </div>
          <!-- /product -->

          <!-- product -->
          <% yahoo_shopping_item = yahoo_shopping_item(@yahoo_shopping_ranks[rank].Name) %>
          <div class="col-md-4 col-xs-6">
            <a href="<%= @yahoo_shopping_ranks[rank].Url %>" target="_blank" rel="noopener noreferrer">
              <div class="product">
                <div class="product-img">
                  <%= image_tag @yahoo_shopping_ranks[rank].Image.Medium %>
                  <div class="product-label">
                    <span class="new"><%= rank + 1 %>位</span>
                  </div>
                </div>
                <div class="product-body">
                  <p class="product-category"><%= yahoo_shopping_item&.genreCategory&.name || '????' %></p>
                  <h3 class="product-name"><%= @yahoo_shopping_ranks[rank].Name %></h3>
                  <h4 class="product-price"><%= number_to_currency(yahoo_shopping_item&.price, precision: 0, unit: '').presence || '????' %>円</h4>
                  <div class="product-rating">
                    <i class='fa fa-star'></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                  </div>
                </div>
              </div>
            </a>
          </div>
          <!-- /product -->

          <div class="clearfix visible-sm visible-xs"></div>

          <!-- product -->
